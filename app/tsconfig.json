{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "useDefineForClassFields": true,
    "skipLibCheck": true,

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,  // solid.js recommendation
    "esModuleInterop": false,  // for commonjs modules
    "isolatedModules": true,  // Vite recommendation,
    "noEmit": true,
    "resolveJsonModule": true,
    "types": ["vite/client"],  // specify type package without including in source?

    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,

    "jsx": "preserve",
    "jsxImportSource": "solid-js",
  },
//  "files": ["src/index.ts", "src/main.tsx"]
}
